<h1>Produtos</h1>
<div class="products">
    {{#each products}}
        <div class="product">
            <h3>{{this.name}}</h3>
            <img src="{{this.image}}" alt="{{this.name}}">
            <p>R$ {{this.price}}</p>
            <div class="actions">
                <a href="/products/{{this._id}}">Ver mais</a>
            </div>
        </div>
    {{/each}}
</div>